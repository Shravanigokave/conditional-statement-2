#include <stdio.h>
main()
{
    //1.Display the menu
    printf("Pick an item : \n1.pizza\n2.Burger\n3.Pasta\n4.French Fries\n5.Sandwich");
    //2.Read their choice
    int choice=0;
    scanf("%d",&choice);
    //3.Display according to choice
    switch(choice)
    {
        case 1:
           printf("Pizza rs 239");
           break;
        case 2:
            printf("Burger rs 129");
            break;
        case 3:
            printf("Pasta rs 179");
            break;
        case 4:
             printf("French Fries rs 99");
             break;
        default:
              printf("Invalid choice");
         
    }
    return 0;
}
    
